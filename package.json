{
  "name": "outline-boilerplate-react",
  "version": "0.1.0",
  "private": false,
  "description": "boilerplate react para iniciar um projeto base",
  "author": "Raul Melo",
  "license": "ISC",
  "scripts": {
    "prestart": "yarn tailwind",
    "start": "react-scripts start",
    "prebuild": "yarn tailwind",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "tailwind": "npx tailwindcss build node_modules/tailwindcss/tailwind.css -c ./tailwind.config.js -o src/styles/lib/tailwind.scss",
    "generator": "yarn plop --plopfile ./_generators/plopfile.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "typescript": "^4.0.3",
    "tailwindcss": "^2.0.2",
    "postcss": "^8.2.1",
    "autoprefixer": "^10.1.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.6",
    "dotenv": "^8.2.0",
    "node-sass": "^4.13.1",
    "plop": "^2.7.4"
  }
}
